<Window x:Class="LinqDataBindingWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataBinding With LINQ" Height="584" Width="974">
    <Grid>
        <StackPanel Height="226" HorizontalAlignment="Left" Margin="30,25,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="Auto">
            <Label Content="With LINQ to Objects:" Height="28" Name="label1" />
            <DataGrid AutoGenerateColumns="True" Name="dataGridLinqToObjects" Height="Auto" Width="Auto" CanUserDeleteRows="True" CanUserAddRows="True" />
        </StackPanel>
        <StackPanel Height="226" Name="stackPanel2" Width="Auto" Margin="30,278,415,41">
            <Label Content="With LINQ to Entities:" Height="28" Name="label2" />
            <DataGrid AutoGenerateColumns="True" Name="dataGridLinqToEntities"
                      Height="Auto" Width="Auto">
            </DataGrid>
        </StackPanel>
        <Label HorizontalAlignment="Left" Margin="12,0,0,12" Name="errorMessage" Height="28" VerticalAlignment="Bottom" />
    </Grid>
</Window>
